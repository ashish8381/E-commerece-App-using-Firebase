<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/cart_main"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5sp"
        android:background="@drawable/rounded_solid"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_pro_img"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="80dp"
            android:src="@drawable/avatarr"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/cart_pro_name"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E4D4D"
            android:text="Sportwear Essential"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cart_pro_cat"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:layout_below="@+id/cart_pro_name"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Sportwear Essential"
            />

        <TextView
            android:id="@+id/cart_pro_qty_label"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:layout_below="@+id/cart_pro_cat"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E4D4D"
            android:text="Quantity: "
            />

        <TextView
            android:id="@+id/cart_pro_qty"
            android:layout_toEndOf="@+id/cart_pro_qty_label"
            android:layout_below="@+id/cart_pro_cat"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E4D4D"
            android:text="6"
            />

        <TextView
            android:id="@+id/cart_pro_price"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:layout_below="@+id/cart_pro_qty"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E4D4D"
            android:text="â‚¹ 150.05"
            android:textStyle="bold"
            />

    </RelativeLayout>



</RelativeLayout>